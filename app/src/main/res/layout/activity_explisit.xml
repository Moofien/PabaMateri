<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p_explisit.ExplisitActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExplisit1"
        android:text="Button Explisit Intent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataKirim"
        android:inputType="text"
        android:hint="Masukan kata yang ingin dikirimkan"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExplisit2"
        android:text="Kirim data ke activity 3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExplisit3"
        android:text="Kirim data (parcelable) ke activity ke 4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExplisit4"
        android:text="Menunggu Return dari Activity 5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnHasil"
        android:gravity="center"
        android:hint="menunggu ......"/>
</LinearLayout>