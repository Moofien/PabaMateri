<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cons1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan alamat -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="336 Lamberts Ln\nBrooklyn, NY 11235"
                android:textSize="14sp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- Search bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search in Products..."
                android:padding="12dp"
                android:background="@drawable/search_background" />

        </RelativeLayout>

        <!-- Kategori (Organic, Seasonal, Fresh, Vegan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Organic"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seasonal"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fresh"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vegan"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Promo banner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/greenLight"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvVeggies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Veggies"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25% OFF AT CHECKOUT"
                android:textSize="16sp"
                android:layout_below="@id/tvVeggies"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnShopNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Now"
                android:layout_below="@id/tvDiscount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_background" />

        </RelativeLayout>

        <!-- Categories section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeeAllCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!-- Grid untuk kategori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Discounts"
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Fruits n Vo..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Meat n Pou..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Fish n Seaf..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Breakfast..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Bakery"
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Frozen Foo..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Frozen Foo..."
                        android:gravity="center"
                        android:background="@color/grayLight"
                        android:layout_margin="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Recipes section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/grayVeryLight">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvRecipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipes"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeeAllRecipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!-- Recipe items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivSmoothie"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivSmoothie"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvSmoothie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avocado Honey Smoothie"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSmoothieDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A creamy smoothie with avocado, milk and a touch of honey."
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivPancake"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivPancake"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvPancake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checola Bluebe"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPancakeDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fluffy pancai drops, honey"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnViewRecipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Recipe"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Navigation -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Home"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDiscover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discover"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cart"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Orders"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>